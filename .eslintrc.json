{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "linebreak-style": "off",
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "semi": ["warn", "always"],
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "globals": {
    "window": true,
    "document": true
  },
  "ignorePatterns": ["node_modules/", "public/js/lib/"]
} 