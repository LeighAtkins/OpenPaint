            console.log(`[getTransformedCoords] OUTPUT: Relative coords (${relativeX.toFixed(1)}, ${relativeY.toFixed(1)})`);
        }
        
        return { x: relativeX, y: relativeY };
    }

    /**
     * Converts relative image coordinates back to canvas coordinates
