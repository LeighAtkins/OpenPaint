            return 'side';
        } else if (filename.includes('back')) {
            return 'back';
        } else if (filename.includes('cushion')) {
            return 'cushion';
        } else {
            // If no matching keywords, find next available label
            for (const label of IMAGE_LABELS) {
                if (!window.originalImages[label]) {
