{
  "name": "openpaint",
  "version": "1.0.0",
  "description": "A web-based drawing and annotation tool designed for email communication of measurements and specifications",
  "main": "app.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "node app.js",
    "build": "echo 'Static assets ready for deployment'",
    "build:css": "npx --yes @tailwindcss/cli -i \"./css/tailwind.input.css\" -o \"./css/tailwind.build.css\" --minify",
    "vercel-build": "npm run build:css",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:visual": "jest --testMatch='**/tests/visual/**/*.test.js'",
    "test:performance": "jest --testMatch='**/tests/performance/**/*.test.js' --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test && npm run test:e2e && npm run test:visual && npm run test:performance"
  },
  "dependencies": {
    "@vercel/postgres": "^0.8.0",
    "debug": "^4.4.3",
    "express": "^4.21.2",
    "file-saver": "^2.0.5",
    "jsondiffpatch": "^0.7.3",
    "jszip": "^3.10.1",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.2",
    "task-master-ai": "^0.13.2",
    "vercel": "^48.4.0"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.5.1",
    "@tailwindcss/cli": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.21",
    "cypress": "^14.5.4",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.2.0",
    "jest-image-snapshot": "^6.5.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16"
  }
}
