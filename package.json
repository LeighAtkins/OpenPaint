{
  "name": "openpaint",
  "version": "2.0.0",
  "type": "module",
  "description": "A web-based drawing and annotation tool designed for email communication of measurements and specifications",
  "main": "app.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "vite --host",
    "dev:server": "node app.js",
    "dev:legacy": "node app.js",
    "build": "tsc -b && vite build",
    "build:css": "npx --yes @tailwindcss/cli -i \"./css/tailwind.input.css\" -o \"./css/tailwind.build.css\" --minify",
    "preview": "vite preview",
    "vercel-build": "npm run build:css",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:legacy": "eslint . --ignore-pattern src/",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:legacy": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:visual": "jest --testMatch='**/tests/visual/**/*.test.js'",
    "test:performance": "jest --testMatch='**/tests/performance/**/*.test.js' --runInBand",
    "validate": "npm run type-check && npm run lint && npm run test",
    "validate:full": "npm run type-check && npm run lint && npm run test:coverage",
    "db:generate-types": "supabase gen types typescript --linked > src/types/database.types.ts",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:seed": "supabase db seed",
    "db:diff": "supabase db diff",
    "prepare": "husky",
    "precommit": "lint-staged",
    "clean": "rm -rf dist node_modules/.vite coverage",
    "nuke": "rm -rf node_modules dist coverage .husky/_"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "@vercel/postgres": "^0.8.0",
    "debug": "^4.4.3",
    "express": "^4.21.2",
    "file-saver": "^2.0.5",
    "jsondiffpatch": "^0.7.3",
    "jszip": "^3.10.1",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.2",
    "task-master-ai": "^0.13.2",
    "vercel": "^48.4.0"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.5.1",
    "@supabase/auth-helpers-shared": "^0.7.0",
    "@tailwindcss/cli": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.21",
    "cypress": "^14.5.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.2.0",
    "jest-image-snapshot": "^6.5.1",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supabase": "^2.61.2",
    "tailwindcss": "^4.1.16",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vite-plugin-checker": "^0.11.0",
    "vitest": "^4.0.13"
  }
}
