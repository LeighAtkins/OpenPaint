{
  "name": "openpaint",
  "version": "2.0.0",
  "packageManager": "bun@1.1.42",
  "type": "module",
  "description": "A web-based drawing and annotation tool designed for email communication of measurements and specifications",
  "main": "app.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "vite --host",
    "dev:server": "node app.js",
    "dev:legacy": "node app.js",
    "build": "tsc -b && vite build",
    "build:css": "npx --yes @tailwindcss/cli -i \"./css/tailwind.input.css\" -o \"./css/tailwind.build.css\" --minify",
    "preview": "vite preview",
    "vercel-build": "npm run build:css",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:legacy": "eslint . --ignore-pattern src/",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:visual": "vitest run tests/visual",
    "validate": "npm run type-check && npm run lint && npm run test",
    "validate:full": "npm run type-check && npm run lint && npm run test:coverage",
    "db:generate-types": "supabase gen types typescript --linked > src/types/database.types.ts",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:seed": "supabase db seed",
    "db:diff": "supabase db diff",
    "prepare": "husky",
    "precommit": "lint-staged",
    "clean": "rm -rf dist node_modules/.vite coverage",
    "nuke": "rm -rf node_modules dist coverage .husky/_"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@vercel/postgres": "^0.8.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "jszip": "^3.10.1",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.5.1",
    "@tailwindcss/cli": "^4.1.17",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.14",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.55.0",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supabase": "^2.61.2",
    "tailwindcss": "^4.1.16",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vercel": "^48.4.0",
    "vite": "^7.2.4",
    "vite-plugin-checker": "^0.11.0",
    "vitest": "^4.0.13"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeighAtkins/OpenPaint.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LeighAtkins/OpenPaint/issues"
  },
  "homepage": "https://github.com/LeighAtkins/OpenPaint#readme"
}
