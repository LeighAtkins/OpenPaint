{
  "name": "openpaint",
  "version": "1.0.0",
  "description": "A web-based drawing and annotation tool designed for email communication of measurements and specifications",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:visual": "jest --testMatch='**/tests/visual/**/*.test.js'",
    "test:performance": "jest --testMatch='**/tests/performance/**/*.test.js' --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test && npm run test:e2e && npm run test:visual && npm run test:performance"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.4.5",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "multer": "^1.4.5-lts.1",
    "task-master-ai": "^0.13.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/jest": "^30.0.0",
    "cypress": "^14.5.3",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.0.5",
    "jest-image-snapshot": "^6.5.1"
  }
}
